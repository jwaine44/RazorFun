<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Here are some delicious foods!</h1>
    @{
        var foodArr = new string[]
        {
            "Apple Pie",
            "Burritos",
            "Clams Casino",
            "Donuts"
        };
        for(var i = 0; i < foodArr.Length; i++){
            <div>
                @if(foodArr[i].StartsWith("C"))
                {
                    <p style="color: red;">@foodArr[i]</p>
                } else {
                    <p>@foodArr[i]</p>
                }
            </div>
        }

    }
</body>
</html>